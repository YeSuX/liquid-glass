{
  "name": "liquid-glass",
  "private": false,
  "version": "1.0.0",
  "description": "A React component library for creating liquid glass effects with GSAP",
  "type": "module",
  "main": "./dist/liquid-glass.umd.cjs",
  "module": "./dist/liquid-glass.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/liquid-glass.js",
      "require": "./dist/liquid-glass.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib"
  },
  "keywords": [
    "react",
    "component",
    "liquid",
    "glass",
    "effect",
    "gsap",
    "animation",
    "ui",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/liquid-glass.git"
  },
  "homepage": "https://github.com/yourusername/liquid-glass#readme",
  "bugs": {
    "url": "https://github.com/yourusername/liquid-glass/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "gsap": "^3.13.0",
    "tweakpane": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tweakpane/core": "^2.0.5",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.3.0"
  }
}
